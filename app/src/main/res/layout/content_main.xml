<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/client_redirect_page"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.uofthacks.HippoApp.MainActivity"
    tools:showIn="@layout/activity_main">

    <!-- These buttons are now ImageButtons. -->

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/immediate"
        android:onClick="getHelp"
        android:background="@drawable/button_criticalnp"
        android:layout_marginTop="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="110dp"
        android:layout_above="@+id/signUp" />

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/medium"
        android:background="@drawable/button_moderatenp"
        android:onClick="getHelp"
        android:layout_marginTop="105dp"
        android:layout_marginBottom="250dp"
        android:layout_alignTop="@+id/immediate" />

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mild"
        android:background="@drawable/button_minornp"
        android:onClick="getHelp"
        android:layout_marginTop="290dp"
        android:layout_marginBottom="140dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Login"
        android:onClick="onClickLogin"
        android:background="@drawable/button_loginnp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/mild"
        android:layout_marginStart="191dp"
        android:layout_marginTop="137dp"
        android:layout_alignTop="@+id/mild"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signUp"
        android:background="@drawable/button_signupnp"
        android:layout_alignBottom="@+id/Login"
        android:onClick="onClickSignUp"
        android:layout_marginEnd="200dp"
        android:layout_alignTop="@+id/mild"
        android:layout_alignEnd="@+id/Login"
        android:layout_marginTop="136dp" />

</RelativeLayout>
