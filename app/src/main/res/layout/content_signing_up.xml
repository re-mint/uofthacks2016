<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.uofthacks.HippoApp.SigningUp"
    tools:showIn="@layout/activity_signing_up"
    android:background="@drawable/signup">
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="User"
        android:id="@+id/button3"
        android:layout_marginStart="40dp"
        android:layout_alignTop="@+id/button4"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="FAR"
        android:id="@+id/button4"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="22dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/button5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button5"
        android:onClick="onClickSubmit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fullName"
        android:layout_marginTop="100dp"
        android:hint="Full Name"
        android:gravity="center"
        android:layout_alignStart="@+id/button3"
        android:layout_alignEnd="@+id/email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:hint="Description(Age,Sex,Gender)"
        android:gravity="center"
        android:layout_below="@+id/fullName"
        android:layout_alignStart="@+id/fullName"
        android:layout_alignEnd="@+id/email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emergContact"
        android:hint="Emergancy Contact"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/phoneNumber"
        android:layout_alignEnd="@+id/email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phoneNumber"
        android:hint="Phone Number"
        android:gravity="center"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/description"
        android:layout_alignStart="@+id/description"
        android:layout_alignEnd="@+id/email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bloodType"
        android:hint="Blood Type"
        android:gravity="center"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/emergContact"
        android:layout_alignStart="@+id/emergContact"
        android:layout_alignEnd="@+id/email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:hint="Email"
        android:gravity="center"
        android:layout_below="@+id/bloodType"
        android:layout_alignStart="@+id/Other"
        android:layout_marginTop="9dp"
        android:layout_alignEnd="@+id/Other" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Other"
        android:hint="Other Info (ie Allergies, Concerns)"
        android:gravity="center"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />
</RelativeLayout>
